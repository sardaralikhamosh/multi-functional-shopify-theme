{%- assign layout_style = layout_style | default: 'grid' -%}
{%- if layout_style == 'list' -%}
    <div class="about-member row align-items-center text-{{section.settings.text_align}}">
        <div class="about-member__image col-12 col-md-6 col-xxl-5 mb-3 mb-sm-0">
            <div class="aboutIcon">
                {%- if block.settings.image != blank -%}
                    {% include 'img-global', image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop   %}
                {%- else -%} 
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
            </div>
        </div>
        <div class="about-member__content col-12 col-md-6 col-xxl-7">
            {%- if block.settings.title != blank -%}
                <h5 class="about-member__name mb-1">{{ block.settings.title }}</h5>
            {%- endif -%}
            {%- if block.settings.position != blank -%}
                <div class="about-member__position">{{ block.settings.position }}</div>
            {%- endif -%}
            {%- if block.settings.desc != blank -%}
                <div class="about-member__desc mb-3">{{ block.settings.desc}}</div>
            {%- endif -%}
            {%- if block.settings.fa_link != blank or block.settings.tw_link != blank or block.settings.in_link != blank  or block.settings.instagram_link != blank -%}
                <div class="about-member__social text-center">
                    <ul class="about-member__social-list mb-0 list-unstyled d-flex justify-content-{{section.settings.text_align}}">
                        {%- if block.settings.fa_link != blank -%}
                            <li class="facebook">
                                <a target="_blank" href="{{ block.settings.fa_link }}" class="d-block   mb-2 btn-social--facebook">
                                    {%- include 'icons', icon: 'facebook' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.tw_link != blank -%}
                            <li class="twitter">
                                <a target="_blank" href="{{ block.settings.tw_link }}" class="d-block   mb-2 btn-social--twitter">
                                    {%- include 'icons', icon: 'twitter' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.in_link != blank -%}
                            <li class="youtube">
                                <a target="_blank" href="{{ block.settings.in_link }}"  class="d-block   mb-2 btn-social--youtube">
                                    <i class="fa fa-youtube"></i>
                                    {%- include 'icons', icon: 'youtube' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.instagram_link != blank -%}
                            <li class="instagram">
                                <a target="_blank" href="{{ block.settings.instagram_link }}" class="d-block  btn-social--instagram">
                                    {%- include 'icons', icon: 'instagram' -%}
                                </a>
                            </li>
                        {%- endif -%}
                    </ul>
                </div>
            {%- endif -%}
        </div>
    </div>
{%- else -%}
    <div class="about-member text-{{section.settings.text_align}}">
        <div class="about-member__image position-relative mb-3 pb-md-2">
            <div class="aboutIcon">
                {%- if block.settings.image != blank -%}
                    {% include 'img-global', image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop   %}
                {%- else -%} 
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
            </div>
            {%- if block.settings.fa_link != blank or block.settings.tw_link != blank or block.settings.in_link != blank  or block.settings.instagram_link != blank -%}
                <div class="about-member__social position-absolute top-0 end-0 p-3">
                    <ul class="about-member__social-list mb-0 list-unstyled d-flex flex-column">
                        {%- if block.settings.fa_link != blank -%}
                            <li class="facebook">
                                <a target="_blank" href="{{ block.settings.fa_link }}" class="d-block mb-2  btn-social--facebook">
                                    {%- include 'icons', icon: 'facebook' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.tw_link != blank -%}
                            <li class="twitter">
                                <a target="_blank" href="{{ block.settings.tw_link }}" class="d-block mb-2  btn-social--twitter">
                                    {%- include 'icons', icon: 'twitter' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.in_link != blank -%}
                            <li class="youtube">
                                <a target="_blank" href="{{ block.settings.in_link }}"  class="d-block mb-2  btn-social--youtube">
                                    <i class="fa fa-youtube"></i>
                                    {%- include 'icons', icon: 'youtube' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.instagram_link != blank -%}
                            <li class="instagram">
                                <a target="_blank" href="{{ block.settings.instagram_link }}" class="d-block  btn-social--instagram">
                                    {%- include 'icons', icon: 'instagram' -%}
                                </a>
                            </li>
                        {%- endif -%}
                    </ul>
                </div>
            {%- endif -%}
        </div>
        <div class="about-member__content">
            {%- if block.settings.title != blank -%}
                <h5 class="about-member__name mb-1">{{ block.settings.title }}</h5>
            {%- endif -%}
            {%- if block.settings.position != blank -%}
                <div class="about-member__position">{{ block.settings.position }}</div>
            {%- endif -%}
            {%- if block.settings.desc != blank -%}
                <div class="about-member__desc">{{ block.settings.desc}}</div>
            {%- endif -%}
        </div>
    </div>
{%- endif -%}