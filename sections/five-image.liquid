{%- capture section_style -%}
    {%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
        background-color: {{ section.settings.color_bg }};
    {%- endif -%}
    {%- if section.settings.padding_block != blank -%}
        padding: {{section.settings.padding_block}};
    {%- endif -%}
    {%- if section.settings.margin_block != blank -%}
        margin: {{section.settings.margin_block}};
    {%- endif -%}
{%- endcapture -%}
<div class="vela-section section-five-image overflow-hidden" {% if section_style%}style="{{ section_style }}"{% endif%}>
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section__inner">
            <div class="vela-section__content">
                <div class="row g-0">
                    <div class="col-12 col-md-6">
                        <div class="five-image__item">
                            {%- if section.settings.image1_url != blank -%}
                                <a  href="{{ section.settings.image1_url }}" title="" >
                            {%- endif -%}
                                {% if section.settings.image1 != blank %}
                                    {% include 'img-global' with image: section.settings.image1 %}
                                {% else %}
                                    <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/960x1056.jpg" />
                                {% endif %}
                            {%- if section.settings.image1_url != blank -%}
                                </a>
                            {%- endif -%}
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="row g-0">
                            <div class="col-6">
                                <div class="five-image__item">
                                    {%- if section.settings.image2_url != blank -%}
                                        <a  href="{{ section.settings.image2_url }}" title="" >
                                    {%- endif -%}
                                        {% if section.settings.image2 != blank %}
                                            {% include 'img-global' with image: section.settings.image2 %}
                                        {% else %}
                                            <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/480x528.jpg" />
                                        {% endif %}
                                    {%- if section.settings.image2_url != blank -%}
                                        </a>
                                    {%- endif -%}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="five-image__item">
                                    {%- if section.settings.image3_url != blank -%}
                                        <a  href="{{ section.settings.image3_url }}" title="" >
                                    {%- endif -%}
                                        {% if section.settings.image3 != blank %}
                                            {% include 'img-global' with image: section.settings.image3 %}
                                        {% else %}
                                            <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/480x528.jpg" />
                                        {% endif %}
                                    {%- if section.settings.image3_url != blank -%}
                                        </a>
                                    {%- endif -%}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="five-image__item">
                                    {%- if section.settings.image4_url != blank -%}
                                        <a  href="{{ section.settings.image4_url }}" title="" >
                                    {%- endif -%}
                                        {% if section.settings.image4 != blank %}
                                            {% include 'img-global' with image: section.settings.image4 %}
                                        {% else %}
                                            <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/480x528.jpg" />
                                        {% endif %}
                                    {%- if section.settings.image4_url != blank -%}
                                        </a>
                                    {%- endif -%}
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="five-image__item">
                                    {%- if section.settings.image5_url != blank -%}
                                        <a  href="{{ section.settings.image5_url }}" title="" >
                                    {%- endif -%}
                                        {% if section.settings.image5 != blank %}
                                            {% include 'img-global' with image: section.settings.image5 %}
                                        {% else %}
                                            <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/480x528.jpg" />
                                        {% endif %}
                                    {%- if section.settings.image5_url != blank -%}
                                        </a>
                                    {%- endif -%}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Five Images",
        "class": "velaFramework",
        "settings": [
            {
              "type": "header",
              "content": "Design Block"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Enabel Full Width?"
            },
            {
                "type": "color",
                "id": "color_bg",
