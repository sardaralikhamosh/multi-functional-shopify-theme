{%- capture section_style -%}
    {%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
        background-color: {{ section.settings.color_bg }};
    {%- endif -%}
    {%- if section.settings.padding_block != blank -%}
        padding: {{section.settings.padding_block}};
    {%- endif -%}
    {%- if section.settings.margin_block != blank -%}
        margin: {{section.settings.margin_block}};
    {%- endif -%}
{%- endcapture -%}
<div class="vela-section three-images" {% if section_style%}style="{{ section_style }}"{% endif%}>
    <div class="container{% if section.settings.full_with %}-fluid{% endif %}">
        <div class="vela-section__inner">
            <div class="vela-section__content overflow-hidden">
                <div class="row g-4 row-cols-1 row-cols-md-3">
                    <div class="three-image__item col">
                        <a  href="{{ section.settings.url1 }}" title="" >
                            {% if section.settings.single_images1 != blank %}
                                {% include 'img-global' with image: section.settings.single_images1 %}
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                        </a>
                    </div>
                    <div class="three-image__item col">
                        <a  href="{{ section.settings.url2 }}" title="" >
                            {% if section.settings.single_images2 != blank %}
                                {% include 'img-global' with image: section.settings.single_images2 %}
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                        </a>
                    </div>
                    <div class="three-image__item col">
                        <a  href="{{ section.settings.url3 }}" title="" >
                            {% if section.settings.single_images3 != blank %}
                                {% include 'img-global' with image: section.settings.single_images3 %}
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                        </a>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Three images",
        "class": "velaFramework",
        "settings": [
            {
              "type": "header",
              "content": "Design Block"
