                "label": "Url"
            },
            {
                "type": "header",
                "content": "Item"
            },            
            {
                "type": "image_picker",
                "id": "single_images2",
                "label": "Banner"
            },
            {
                "type": "url",
                "id": "url2",
                "label": "Url"
            },
            {
                "type": "header",
                "content": "Item"
            },           
            {
                "type": "image_picker",
                "id": "single_images3",
                "label": "Banner"
            },
            {
                "type": "url",
                "id": "url3",
                "label": "Url"
            }
        ],
        "presets": [
            {
                "name": "Three images",
                "category": "3. Images"
            }
        ]
    }
{% endschema %}