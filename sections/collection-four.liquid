                            </div>
                            <div class="col-12">
                                <div class="row g-3 g-lg-4">
                                    <div class="col-12 col-sm-6">
                                        <div class="collection-four__wrap collection-wrapper collection-primary position-relative overflow-hidden">
                                            {%- assign proCollection3 = section.settings.collection_handle3 -%}
